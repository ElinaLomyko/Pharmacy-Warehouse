<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Pharmacy.Pages.AddProductPage">
    <StackPanel MaxWidth="300">
        <Label Margin="0 5">Тип:</Label>
        <ComboBox Width="300" x:Name="CbType">
            <ComboBoxItem>Гигиенические изделия</ComboBoxItem>
            <ComboBoxItem>Медицинские аппараты</ComboBoxItem>
            <ComboBoxItem>Лекарства</ComboBoxItem>
        </ComboBox>
        <Label Margin="0 5">Наименование:</Label>
        <TextBox x:Name="TbName"></TextBox>
        <Label Margin="0 5">Количество:</Label>
        <TextBox x:Name="TbCount"></TextBox>
        <Button x:Name="BtnAdd" Margin="0 5">Добавить</Button>
    </StackPanel>
</UserControl>
