<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="300"
        Width="400"
        Height="300"
        x:Class="Pharmacy.Windows.EditProductWindow"
        Title="Редактирование товара">
    <StackPanel MaxWidth="300">
        <Label Margin="0 5">Наименование:</Label>
        <TextBox x:Name="TbName"></TextBox>
        <Label Margin="0 5">Количество:</Label>
        <TextBox x:Name="TbCount"></TextBox>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="BtnSave" Margin="10">Сохранить</Button>
            <Button x:Name="BtnCancel" Margin="10">Отмена</Button>
        </StackPanel>
    </StackPanel>
</Window>
